<%- include('header/header') %> 

  <div style="text-align: center;">
    <h1>Edit Profile</h1>
    <form action="/profile/<%= profile.UserId %>/edit" method="post">
      <label>First name</label><br>
      <input type="text" name="firstName" value="<%= profile.firstName %>"><br>
      <br>
      <label>Last name</label><br>
      <input type="text" name="lastName" value="<%= profile.lastName %>"><br>
      <br>
      <label>Age</label><br>
      <input type="number" name="age" value="<%= profile.age %>"><br>
      <br>
      <br>
      <input type="submit" value="Save">
    </form>
  </div>
  

  <% if (errors) { %>
    <p style="color: red;"><%= errors.split(',').join(', ') %></p>
   <% } %>
</body>
</html>